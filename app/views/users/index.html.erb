<p id="notice"><%= notice %></p>

<h1>Add Friends</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Email</th>
      <th>Phone</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.name %></td>
        <td><%= user.email %></td>
        <td><%= user.phone %></td>
        <td><%= link_to 'Add', add_friends_path(user.id), method: :post %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

