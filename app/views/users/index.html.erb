<h2>Add Friends</h2>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Email</th>
      <th>Phone</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>

    <% @users.each do |user| %>
      <tr>
        <td><%= user.name %></td>
        <td><%= user.email %></td>
        <td><%= user.phone %></td>
        <td><%= button_to 'Add', add_friends_path(:id => user.id,:name => user.name), method: :post, class: "btn btn-primary custom2" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

