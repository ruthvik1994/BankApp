<h1>Transactions on selected account</h1>

<table class="table table-striped">
  <thead>
  <tr>
    <th><h3>From</h3></th>
    <th><h4>To</h4></th>
    <th><h4>State</h4></th>
    <th><h4>Amount</h4></th>
    <th colspan=4></th>
  </tr>
  </thead>

  <tbody>
  <% @transactions.each do |transaction| %>
      <tr>
        <td><%= transaction.from %></td>
        <td><%= transaction.to %></td>
        <td><%= transaction.state %></td>
        <td><%= transaction.amount %></td>
      </tr>
  <% end %>
  </tbody>
</table>

<br>

<%= button_to 'Back', account_path(), method: :get, class: "btn btn-primary custom1" %>
