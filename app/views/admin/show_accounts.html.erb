<h1>All Accounts</h1>

<h2>Pending Accounts</h2>
<table>
  <thead>
  <tr>
    <th>Acc no</th>
    <th>Balance</th>
    <th>State</th>
    <th colspan="3"></th>
  </tr>
  </thead>

  <tbody>
  <% @pending_accounts.each do |account| %>
      <tr>
        <td><%= account.acc_no %></td>
        <td><%= account.balance %></td>
        <td><%= account.state %></td>
        <td><%= link_to 'Activate', change_state_account_path(id: account.id, chg_state: :active) %></td>
        <td><%= link_to 'Destroy', account, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
  <% end %>
  </tbody>
</table>

<h2>Activated Accounts</h2>
<table>
  <thead>
  <tr>
    <th>Acc no</th>
    <th>Balance</th>
    <th>State</th>
    <th colspan="3"></th>
  </tr>
  </thead>

  <tbody>
  <% @activated_accounts.each do |account| %>
      <tr>
        <td><%= account.acc_no %></td>
        <td><%= account.balance %></td>
        <td><%= account.state %></td>
        <td><%= link_to 'Deactivate', change_state_account_path(id: account.id, chg_state: :inactive) %></td>
        <td><%= link_to 'Destroy', account, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
  <% end %>
  </tbody>
</table>
